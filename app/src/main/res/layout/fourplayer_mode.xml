<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:orientation="vertical"
    tools:context="com.cmput301.mmabuyo.readysetpress.FourPlayerActivity"
    android:weightSum="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:id="@+id/P1button4P"
        android:onClick="someoneClicked"
        android:layout_weight="0.25"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:id="@+id/P2button4P"
        android:onClick="someoneClicked"
        android:layout_weight="0.25"/>

    <Button
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:text="Player 3"
        android:id="@+id/P3button4P"
        android:onClick="someoneClicked"
        android:layout_weight="0.25"/>

    <Button
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:text="Player 4"
        android:id="@+id/P4button4P"
        android:onClick="someoneClicked"
        android:layout_weight="0.25"/>
</LinearLayout>
