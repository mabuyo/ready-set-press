<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="fill_parent" android:weightSum="1.0" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Single Training"
            android:id="@+id/singleTrainingButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.33"
            android:onClick="singleModeInstructions"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Multiplayer Game"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.33"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Statistics"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.33"
            android:onClick="showStatisticsActivity"/>
    </LinearLayout>
</RelativeLayout>
